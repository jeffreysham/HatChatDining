<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.jeffreysham.hatchatdining.HandlePersonChoiceActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="JS"
        android:id="@+id/person_initials_view"
        android:background="@drawable/person_initials_background"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/name_view"
        android:layout_margin="10dp"
        android:layout_below="@id/person_initials_view"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Age"
        android:id="@+id/age_view"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/description_view"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/age_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number"
        android:id="@+id/number_view"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/description_view"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="2.0"
        android:layout_below="@id/number_view">
        <EditText
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="@string/write_message_hint"
            android:id="@+id/message_text"
            android:layout_width="0dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/send_button"
            android:paddingBottom="5sp"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingTop="5sp"
            android:src="@drawable/send_icon"
            android:textColor="#FFF"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/callButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/send_button"
            android:paddingBottom="5sp"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingTop="5sp"
            android:src="@drawable/call_icon"
            android:textColor="#FFF"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>
